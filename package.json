{
	"name": "xquark",
	"displayName": "xquark",
	"description": "AMZ Coding",
	"version": "0.0.3",
	"publisher": "xunger",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"icon": "icon.png",
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "xquark.saveCode",
				"title": "保存代码片段"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "xquark.saveCode",
					"group": "navigation"
				}
			]
		},
		"configuration":{
			"title": "Xquark配置项",
			"properties": {
				"xquark.saveAPIUrl": {
					"type": "string",
					"default": "http://wuchuanxun.com:4260/record",
					"description": "保存代码片段的地址(POST)"
				},
				"xquark.searchAPIUrl":{
					"type": "string",
					"default": "http://wuchuanxun.com:4260/record/search",
					"description": "搜索代码片段的地址(GET)"
				},
				"xquark.uid":{
					"type": "string",
					"default": "global",
					"description": "用户标识(个人设定，不保证唯一)"
				},
				"xquark.trigger":{
					"type": "string",
					"default": ">",
					"description": "代码补全的Trigger"
				}
			}
		}
	},
	"repository": {
		"type": "git",
  	"url": "https://github.com/wuchuanxun/xquark.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"axios": "^0.21.1"
	}
}
